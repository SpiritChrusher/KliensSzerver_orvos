@page "/"
@inherits PatientListBase


@if (Patients is null)
{
    <div class="spinner"></div>
}
else
{
<h2>Doctor's client. You can view and edit patient's data.</h2>
<h3>Patients' list</h3>
<div class="card-deck">
    @foreach (var patient in Patients)
    {
    <div class="card m-3" style="min-width: 18rem; max-width:40%;">
        <div class="card-header">
            <h3>Name: @patient.Name</h3>
            <h3>SSN: @patient.SSN</h3>
        </div>

        <div class="card-footer text-center">
            <a href="@($"patientdetails/{patient.Id}")"
    class="btn btn-primary m-1">View</a>

            <a href="@($"editpatient/{patient.Id}")"
    class="btn btn-primary m-1">Edit</a>
        </div>
    </div>
    }
</div>
    <button class="btn btn-danger m-1" @onclick=DeleteAllPatients>DeleteAll</button>
}